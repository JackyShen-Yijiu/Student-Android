<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="wrap_content">
    <TextView 
        android:id="@+id/my_wallet_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/left_black"
        android:text="收益类型"/>
     <TextView 
        android:id="@+id/mywallet_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_wallet_title_tv"
        android:textSize="12sp"
        android:textColor="@color/left_gray"
        android:text="时间"/>
      <TextView 
        android:id="@+id/mywallet_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_main_color"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/my_wallet_title_tv"
        android:layout_above="@+id/mywallet_item_income_tv"
        android:textSize="12dp"
        android:visibility="gone"
        android:text="兑换券单号"
        />

      <TextView
          android:id="@+id/mywallet_item_income_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/mywallet_item_date_tv"
          android:layout_alignParentRight="true"
          android:text="+11.56积分"
          android:textColor="@color/new_app_main_color"
          android:textSize="16sp" />

</RelativeLayout>
</LinearLayout>
