<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/register_registerlayout_paddingleftright"
    android:paddingRight="@dimen/register_registerlayout_paddingleftright" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/register_phone_et"
            style="@style/register_et_style"
            android:layout_width="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/login_phone"
            android:drawablePadding="10dp"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="#d2d2d2"
            android:textColor="@color/text_color_dark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/delet_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delet_phone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/login_deivder_im"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_et_height"
        android:layout_marginTop="@dimen/register_et_margintop"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/register_authcode_et"
            style="@style/register_et_style"
            android:layout_width="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/key_register"
            android:drawablePadding="10dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColorHint="#d2d2d2"
            android:textColor="@color/text_color_dark" />

        <Button
            android:id="@+id/register_code_btn"
            style="@style/btn_style"
            android:layout_width="@dimen/register_code_btn_width"
            android:text="@string/send_auth_code"
            android:background="@drawable/button"
            android:textColor="#fff"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_color"
        android:contentDescription="@string/app_name" />

    <Button
        android:id="@+id/register_register_btn"
        style="@style/btn_style"
           android:background="@drawable/button"
        android:layout_marginBottom="@dimen/register_register_btn_marginbottom"
        android:layout_marginTop="@dimen/register_register_btn_margintop"
        android:text="@string/next_step" />

</LinearLayout>