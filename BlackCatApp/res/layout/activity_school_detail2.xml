                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/iv_rate"
                            android:textSize="14sp"
                            android:textColor="#FFB7B7B7"
                            android:text="通过率："/>
                        <TextView
                        android:id="@+id/school_detail_rate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_rate"
                        android:text="暂无"
                        android:textColor="#FF6F6F6F"
                        android:textSize="14dp" />
                    </RelativeLayout>

                <ImageView
                    style="@style/coachdetail_devider_style"
                    android:contentDescription="@string/app_name" />

                
                <RelativeLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="12dp">
                        <ImageView 
                            android:id="@+id/iv_time"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/icon_time"/>
                        <TextView 
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/iv_time"
                            android:textSize="14sp"
                            android:textColor="#FFB7B7B7"
                            android:text="营业时间："/>
                        <TextView
                        android:id="@+id/school_detail_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_time"
                        android:text="暂无"
                        android:textColor="#FF6F6F6F"
                        android:textSize="14dp" />
                    </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_bg_dark"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                <TextView
                    android:id="@+id/school_detail_school_intr_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驾校简介"
                    android:textColor="#6F6F6F"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/school_detail_school_intr_title"
                    android:layout_marginTop="15dp"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/school_detail_school_intr_title"
                    android:layout_marginTop="24dp" >

                    <TextView
                        android:id="@+id/coach_detail_introduction_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:textColor="@color/new_text_color_light"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/coach_detail_introduction_tv"
                        android:text="展开"
                        android:layout_marginRight="3dp"
                        android:textColor="#FF5B8EFB"
                        android:layout_alignRight="@+id/coach_detail_introduction_tv"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_bg_dark"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:id="@+id/school_detail_coach_info_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="教练信息"
                    android:textColor="#6F6F6F"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_bg_dark"
                android:contentDescription="@string/app_name" />
