<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_light" >

    <!-- 2.0 版本 android:clipToPadding="true" -->

    <View
        android:id="@+id/school_detail_top_static"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.sft.viewutil.MyScrollView
        android:id="@+id/school_detail_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="40dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- 高度动态控制 -->

                <RelativeLayout
                    android:id="@+id/school_detail_headpic_im"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                    <ImageView
                        android:id="@+id/school_detail_viewpager"
                        android:layout_width="match_parent"
                        android:background="@drawable/defaultimage"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/headpic_cover" />

                    <RelativeLayout
                        android:id="@+id/rl_title"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_alignParentBottom="true"
                        android:background="#99000000" >

                        <TextView
                            android:id="@+id/school_detail_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="画展驾校"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <RatingBar
                            android:id="@+id/school_detail_ratingrar"
                            style="@style/roomRatingBar_20"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="76dp"
                            android:isIndicator="true"
                            android:rating="0" />
                    </RelativeLayout>
             

                    <LinearLayout
                        android:id="@+id/school_detail_dotlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >
                    </LinearLayout>

                    <View
                        android:id="@+id/school_detail_top_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:background="@color/new_app_main_color"
                        android:visibility="gone" >
                    </View>
                </RelativeLayout>
                     <View
                android:layout_width="match_parent"
                android:layout_below="@+id/school_detail_headpic_im"
                android:layout_height="10dp"
                android:background="@color/app_bg_dark"
                android:contentDescription="@string/app_name" />
                <CheckBox
                    android:id="@+id/school_detail_collection_ck"
                    android:layout_width="@dimen/coachdetail_collection_widthheight"
                    android:layout_height="@dimen/coachdetail_collection_widthheight"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/school_detail_headpic_im"
                    android:layout_marginRight="@dimen/coachdetail_collection_marginright"
                    android:layout_marginTop="@dimen/coachdetail_collection_margintop"
                    android:background="@drawable/collect_heart_bkground"
                    android:button="@null"
                    android:contentDescription="@string/app_name" />
                

                <RelativeLayout
                    android:layout_width="@dimen/coachdetail_collection_widthheight"
                    android:layout_height="@dimen/coachdetail_collection_widthheight"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/school_detail_headpic_im"
                    android:layout_marginRight="@dimen/coachdetail_collection_marginright"
                    android:layout_marginTop="@dimen/coachdetail_collection_margintop"
                    android:background="@drawable/collect_bkground"
                    android:visibility="gone" >
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/school_detail_price_location_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/school_detail_headpic_im"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                    android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                    <TextView
                        style="@style/coachdetail_title_style"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    
              
            
                    <RelativeLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                       >
                        <ImageView 
                            android:id="@+id/iv_price"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/icon_qian"/>
                        <TextView 
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/iv_price"
                            android:textSize="14sp"
                            android:textColor="#FFB7B7B7"
                            android:text="价格："/>
                        <TextView
                        android:id="@+id/school_detail_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_price"
                        android:text="暂无"
                        android:textColor="#FF6F6F6F"
                        android:textSize="14dp" />
                    </RelativeLayout>
                    
                    

                    <ImageView
                        style="@style/coachdetail_devider_style"
                        
                        android:contentDescription="@string/app_name" />

                    <RelativeLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                        <ImageView 
                            android:id="@+id/iv_place"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/icon_map"/>
                        <TextView 
                            android:id="@+id/tv_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/iv_place"
                            android:textSize="14sp"
                            android:textColor="#FFB7B7B7"
                            android:text="地址："/>
                        <TextView
                        android:id="@+id/school_detail_place_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_place"
                        android:text="暂无"
                        android:textColor="#FF6F6F6F"
                        android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                android:paddingLeft="15dp"
                android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom"
