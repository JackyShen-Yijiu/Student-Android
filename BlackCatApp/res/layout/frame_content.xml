<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawerlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/new_app_main_color"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" >

        <RelativeLayout
            android:id="@+id/main_rl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" >

            <!-- android:clipToPadding="true" -->

            <com.baidu.mapapi.map.MapView
                android:id="@+id/main_bmapView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/title_layout"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@color/new_app_main_color" >

                <ImageView
                    android:id="@+id/home_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/menu" />

                <ImageView
                    android:id="@+id/title_left_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/title_tv"
                    android:alpha="0.5"
                    android:background="@drawable/left_arrow"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="驾校"
                    android:textColor="#fefefe"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/title_right_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/title_tv"
                    android:alpha="0.5"
                    android:background="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/title_right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/title_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:textColor="#fefefe"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/title_far_right_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/title_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/add_appointment" />

                <RadioGroup
                    android:id="@+id/title_gp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <RadioButton
                        android:id="@+id/radio0"
                        style="@style/title_school_coach_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="驾校" />

                    <RadioButton
                        android:id="@+id/radio1"
                        style="@style/title_school_coach_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教练" />
                </RadioGroup>
            </RelativeLayout>

            <com.sft.blackcatapp.home.view.MainScreenContainer
                android:id="@+id/main_screen_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/title_layout"
                android:background="@color/white"
                android:orientation="vertical" />
        </RelativeLayout>
        <!--  
		<View
            android:focusable="true"
            android:id="@+id/main_force_evaluate_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:clickable="true"
            android:background="@color/drawer_selector"
            android:layout_marginBottom="52dp" >

        </View>
        -->
        <RelativeLayout
            android:focusable="true"
            android:id="@+id/main_force_evaluate_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:layout_marginBottom="52dp" >

            <include layout="@layout/dialog_comment" />
        </RelativeLayout>  
    </RelativeLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.sft.fragment.MenuFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        tools:layout="@layout/left_fragment_menu" />

</android.support.v4.widget.DrawerLayout>