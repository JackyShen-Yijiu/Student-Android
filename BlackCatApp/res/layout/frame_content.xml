<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_light"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/main_bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/new_app_main_color" >

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/kind_selecter_stly" />

        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/title_tv"
            android:alpha="0.5"
            android:background="@drawable/left_arrow" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="驾校"
            android:textColor="#fefefe"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/title_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:alpha="0.5"
            android:layout_toRightOf="@+id/title_tv"
            android:background="@drawable/right_arrow" />

        <TextView
            android:id="@+id/title_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="15dp"
            android:textColor="#fefefe"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.sft.blackcatapp.home.view.MainScreenContainer
        android:id="@+id/main_screen_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:orientation="vertical" />

</RelativeLayout>