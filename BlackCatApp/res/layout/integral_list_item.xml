<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="wrap_content">
    <TextView 
        android:id="@+id/integral_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/left_black"
        android:text="收益类型"/>
     <TextView 
        android:id="@+id/integral_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/integral_type"
        android:textSize="12sp"
        android:textColor="@color/left_gray"
        android:text="时间"/>
      <TextView 
        android:id="@+id/integral_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
       	android:layout_alignParentRight="true"
       	android:textSize="16sp"
       	android:textColor="@color/new_app_main_color"
        android:text="+11.56积分"/>
</RelativeLayout>
</LinearLayout>
