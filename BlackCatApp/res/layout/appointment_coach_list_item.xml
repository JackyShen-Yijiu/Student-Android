<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingRight="15dp"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/appointment_car_item_ck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/appointment_car_coach_hori_noselect_bkground" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp" >

        <ImageView
            android:id="@+id/appointment_car_headpic_item_im"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/appointment_car_headpic_item_im"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/appointment_car_coach_name_item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/appointment_car_coach_item_shuttle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shuttle_bkground"
                    android:contentDescription="@string/app_name"
                    android:text="@string/shuttle"
                    android:textColor="@color/app_main_color"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/appointment_car_coach_item_general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/general_bkground"
                    android:contentDescription="@string/app_name"
                    android:text="@string/general"
                    android:textColor="@color/coach_general"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/appointment_car_school_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="asdfasdf"
                android:textColor="#999999"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>