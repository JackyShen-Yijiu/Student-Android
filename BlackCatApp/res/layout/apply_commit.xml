<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    tools:context="com.sft.emchat.BaiduMapActivity" >

    <LinearLayout
        android:id="@+id/ll_title_one"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="21dp"
        android:background="#f7f9fb"
        android:orientation="horizontal" >
    </LinearLayout>

    <Button
        android:id="@+id/button_sus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff6633"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title_one"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:text="恭喜您报名成功"
        android:textColor="#f00"
        android:textSize="@dimen/txt_size_large" />

    <include
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/textView1"
        layout="@layout/line" />

    <LinearLayout
        android:id="@+id/apply_commit_school_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:padding="15dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/apply_commit_img"
            android:layout_width="@dimen/img_height"
            android:layout_height="@dimen/img_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical" >
            <TextView 
                android:id="@+id/apply_commit_school_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="暂无驾校"
                android:textColor="@color/txt_gray_deep"
                />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/apply_commit_class_type"
                    style="@style/text_gray_small"
                    android:text="报名班型:" />
                
                 <TextView
                    android:id="@+id/apply_commit_money"
                    style="@style/text_gray_small"
                    android:layout_alignParentRight="true"
                    android:text="实付款:" />
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/apply_commit_apply_time"
                    style="@style/text_gray_small"
                    android:text="报名时间:" />
                
                 <TextView
                    android:id="@+id/apply_commit_pay_state"
                    style="@style/text_gray_small"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/new_app_main_color"
                    android:text="未支付" />
                
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    
    <include
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/apply_commit_school_infor"
        layout="@layout/line" />

    <TextView
        android:id="@+id/act_apply_suuccess_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/apply_commit_school_infor"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="请您于7日内携带资料前往您所报名的驾校确认报名信息，并支付报名费用。"
        android:textSize="12sp" />

    

    <ImageView
        android:id="@+id/apply_commit_qrcode"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/act_apply_suuccess_endtime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:scaleType="centerCrop" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apply_commit_qrcode"
        android:layout_centerHorizontal="true"
        android:text="(报名二维码)"
        android:textColor="@color/txt_gray_deep"
        android:textSize="@dimen/txt_size_small"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/act_apply_suuccess_endtime"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:text="携带资料说明："
        android:textColor="@color/txt_gray_deep"
        android:textSize="@dimen/txt_size_small"/>

    <TextView
        android:id="@+id/apply_commit_carry_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/personal_infor_take"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/act_apply_suuccess_endtime"
        android:layout_below="@+id/apply_commit_carry_data"
        android:layout_marginTop="15dp"
        android:text="订单二维码使用说明："
        android:textColor="@color/txt_gray_deep"
        android:textSize="@dimen/txt_size_small" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView7"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="    再确认订单信息时，只需将此二维码提供给驾校工作人员即可，有工作人员扫描二维码，确认报名信息。"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/act_apply_suuccess_endtime"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="报名编号："
        android:textColor="@color/txt_gray_deep"
        android:textSize="@dimen/txt_size_small"
        />

    <TextView
        android:id="@+id/tv_qrcode"
        style="@style/text_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_toRightOf="@+id/textView4"
        android:text="1351654651" />

</RelativeLayout>