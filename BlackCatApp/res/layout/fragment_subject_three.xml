        <ProgressBar 
        android:id="@+id/study_progressbar"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:max="100"
        android:progress="0"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/study_progress_tv"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_horizontal_color"/>
    </RelativeLayout>

    <com.sft.viewutil.StudyItemLayout
        android:id="@+id/courseware"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        study:itemDescribe="真人实操教学视频"
        android:layout_marginTop="10dp"
        study:itemIcon="@drawable/question_banks"
        study:itemTitle="课件" >
    </com.sft.viewutil.StudyItemLayout>

    <com.sft.viewutil.StudyItemLayout
        android:id="@+id/learn_car_cheats"
