<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <!-- 2.0 版本 -->

    <View
        android:id="@+id/coach_detail_top_static"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.sft.viewutil.MyScrollView
        android:id="@+id/coach_detail_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="40dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- 高度动态控制 -->

                <RelativeLayout
                    android:id="@+id/coach_detail_headpic_im"
                    android:layout_width="match_parent"
                    android:layout_height="260dp" >

                    <cn.sft.infinitescrollviewpager.InfiniteViewPager
                        android:id="@+id/coach_detail_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/headpic_cover" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical" >
                        
                        <com.joooonho.SelectableRoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/coach_detail_headicon_im"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:contentDescription="@string/app_name"
                            android:layout_gravity="center"
                            app:sriv_border_color="#00000000"
                            app:sriv_border_width="1dip" />


                        <TextView
                            android:id="@+id/coach_detail_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="李文政"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_middle" />

                        <RatingBar
                            android:id="@+id/coach_detail_ratingBar"
                            style="@style/roomRatingBar_42" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coach_detail_dotlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >
                    </LinearLayout>

                    <View
                        android:id="@+id/coach_detail_top_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:background="@color/new_app_main_color"
                        android:visibility="gone" >
                    </View>
                    
                    
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/coach_detail_collection_ck"
                    android:layout_width="@dimen/coachdetail_collection_widthheight"
                    android:layout_height="@dimen/coachdetail_collection_widthheight"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/coach_detail_headpic_im"
                    android:layout_marginRight="@dimen/coachdetail_collection_marginright"
                    android:layout_marginTop="@dimen/coachdetail_collection_margintop"
                    android:background="@drawable/collect_heart_bkground"
                    android:button="@null"
                    android:contentDescription="@string/app_name" />

                <RelativeLayout
                    android:layout_width="@dimen/coachdetail_collection_widthheight"
                    android:layout_height="@dimen/coachdetail_collection_widthheight"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/coach_detail_headpic_im"
                    android:layout_marginRight="@dimen/coachdetail_collection_marginright"
                    android:layout_marginTop="@dimen/coachdetail_collection_margintop"
                    android:background="@drawable/collect_bkground"
                    android:visibility="gone" >
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/coach_detail_price_location_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coach_detail_headpic_im"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                    <TextView
                        style="@style/coachdetail_title_style"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coach_detail_coach_teachage_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:drawableLeft="@drawable/ic_teach_ages"
                        android:drawablePadding="30dp"
                        android:gravity="center_vertical"
                        android:text="暂无"
                        android:textColor="@color/txt_333"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/coach_detail_enable_subject_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:drawableLeft="@drawable/ic_suject"
                        android:drawablePadding="30dp"
                        android:gravity="center_vertical"
                        android:text="暂无"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/coach_detail_car_style_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:drawableLeft="@drawable/ic_car"
                        android:drawablePadding="30dp"
                        android:gravity="center_vertical"
                        android:text="暂无"
                        android:textColor="#333333"
                        android:textSize="14dp" />
                </LinearLayout>

                <ImageView
                    style="@style/coachdetail_devider_style"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <ImageView
                style="@style/coachdetail_devider_style"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                android:paddingLeft="15dp"
                android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/coach_detail_schoolinfo_tv"
                    style="@style/coachdetail_title_style"
                    android:text="@string/school_info"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/coachdetail_content_style"
                        android:text="@string/success_rate" />

                    <TextView
                        android:id="@+id/coach_detail_rate_tv"
                        style="@style/coachdetail_content_style"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/app_main_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/coachdetail_content_style"
                        android:text="@string/work_time" />

                    <TextView
                        android:id="@+id/coach_detail_weektime_tv"
                        style="@style/coachdetail_content_style"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                style="@style/coachdetail_devider_style"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                <TextView
                    android:id="@+id/coach_detail_school_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/ic_school"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:text="暂无"
                    android:textColor="@color/txt_333"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/coach_detail_training_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/ic_training"
                    android:drawablePadding="30dp"
                    android:gravity="center_vertical"
                    android:text="暂无"
                    android:textColor="#333333"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                    android:paddingRight="15dp"
                    android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/schooldetail_trainingground_icon" />

                    <TextView
                        android:id="@+id/coach_detail_nopic_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="暂无训练场照片"
                        android:textColor="#333333"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <HorizontalScrollView
                        android:id="@+id/coach_detail_trainingarea_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" >

                        <LinearLayout
                            android:id="@+id/coach_detail_train_pic_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                style="@style/coachdetail_devider_style"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                <TextView
                    android:id="@+id/coach_detail_introduction_tv"
                    style="@style/coachdetail_content_style"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/schooldetail_introduction_icon"
                    android:drawablePadding="30dp"
                    android:ellipsize="end"
                    android:text="介绍" />
            </RelativeLayout>

            <TextView
                android:id="@+id/coach_detail_tag_tv"
                style="@style/coachdetail_content_style"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_tag"
                android:drawablePadding="30dp"
                android:ellipsize="end"
                android:text="介绍" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <RadioGroup
                    android:id="@+id/coach_detail_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/new_app_main_color"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/coach_detail_course_fee_rb"
                        style="@style/select_coach_radiobutton"
                        android:checked="true"
                        android:text="@string/course_fee" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="@dimen/selectcoach_radiogroup_devider_height"
                        android:layout_gravity="center_vertical"
                        android:background="#dddddd"
                        android:contentDescription="@string/app_name" />

                    <RadioButton
                        android:id="@+id/coach_detail_coach_info_rb"
                        style="@style/select_coach_radiobutton"
                        android:text="@string/student_evaluation" />
                </RadioGroup>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ccc"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/coach_detail_noevaluation_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="暂无课程"
                    android:textColor="#333333"
                    android:textSize="14dp" />
                <!-- 空白占位 -->
                
                <me.maxwin.view.XListView
                    android:id="@+id/coach_detail_comments_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@null"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:listSelector="@android:color/transparent"
                    android:visibility="gone" />

                <me.maxwin.view.XListView
                    android:id="@+id/coach_detail_classes_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@null"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:listSelector="@android:color/transparent" />

                
            </LinearLayout>

           
        </LinearLayout>
    </com.sft.viewutil.MyScrollView>

    <RadioGroup
        android:id="@+id/coach_detail_radiogroup_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_titlebar_layout"
        android:background="@color/new_app_main_color"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <RadioButton
            android:id="@+id/coach_detail_course_fee_rb_top"
            style="@style/select_coach_radiobutton"
            android:checked="true"
            android:text="@string/course_fee" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/selectcoach_radiogroup_devider_height"
            android:layout_gravity="center_vertical"
            android:background="#dddddd"
            android:contentDescription="@string/app_name" />

        <RadioButton
            android:id="@+id/coach_detail_coach_info_rb_top"
            style="@style/select_coach_radiobutton"
            android:text="@string/coach_info" />
    </RadioGroup>

    <include
        android:id="@+id/base_titlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_titlebar_height"
        layout="@layout/title" >
    </include>

  
</RelativeLayout>