<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_dark" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:orientation="vertical" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp" >

            <ImageView
                android:id="@+id/frag_excise_item_type"
                android:layout_width="24dp"
                android:layout_height="14dp" 
                android:layout_marginTop="3dp"
                >
            </ImageView>

            <TextView
                android:id="@+id/frag_excise_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      25.对驾驶已达到报废标准的机动车" />
        </FrameLayout>

        <ImageView
            android:id="@+id/frag_excise_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
             />

        <VideoView
            android:id="@+id/frag_excise_videov"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            android:visibility="gone" />
        
        </LinearLayout>

        <ListView
            android:id="@+id/frag_excise_item_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@null"
            android:dividerHeight="0dp" >
        </ListView>

        <LinearLayout
            android:id="@+id/frag_excise_item_answer_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/frag_excise_item_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="答案详解"
                android:textColor="@color/new_button_color"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/frag_excise_item_answer_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/frag_excise_item_answer_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="16dp"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/frag_excise_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_red_btn_study"
            android:text="确定"
            android:enabled="false"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>