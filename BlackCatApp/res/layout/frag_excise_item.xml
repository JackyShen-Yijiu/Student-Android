<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg_dark"
            android:padding="18dp" >

            <ImageView
                android:id="@+id/frag_excise_item_type"
                android:layout_width="24dp"
                android:layout_height="14dp" >
            </ImageView>

            <TextView
                android:id="@+id/frag_excise_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      25.对驾驶已达到报废标准的机动车" />
        </FrameLayout>

        <ImageView
            android:id="@+id/frag_excise_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <VideoView
            android:id="@+id/frag_excise_videov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/frag_excise_item_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:background="@color/white" >
        </ListView>

        <Button
            android:id="@+id/frag_excise_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@color/new_app_main_color" />
    </LinearLayout>

</ScrollView>