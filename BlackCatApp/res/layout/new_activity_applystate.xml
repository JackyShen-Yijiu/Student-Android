<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    
    <ScrollView 
        android:id="@+id/sc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/complaint_feedbacktype_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/new_app_main_color"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/complaint_feedbacktype_coach"
                android:layout_width="180dp"
                android:layout_height="49dp"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="投诉教练"
                android:drawableBottom="@drawable/select_coach_radiobtn_bkground"
                android:textColor="@drawable/select_coach_radiobtn_textcolor" />


            <RadioButton
                android:id="@+id/complaint_feedbacktype_school"
                android:layout_width="180dp"
                android:layout_height="49dp"
                android:button="@null"
                android:gravity="center"
                android:drawableBottom="@drawable/select_coach_radiobtn_bkground"
                android:text="投诉驾校"
                android:textColor="@drawable/select_coach_radiobtn_textcolor" />
        </RadioGroup>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center" >

            <RadioGroup
                android:id="@+id/complaint_feedbackusertype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_apply"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/complaint_feedbackusertype_anonymous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:checked="true"
                    android:button="@drawable/radio_button_bg"
                    android:paddingLeft="10dp"
                    android:text="匿名投诉"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/complaint_feedbackusertype_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@drawable/radio_button_bg"
                    android:paddingLeft="10dp"
                    android:text="实名投诉"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RadioGroup>

            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee" >
        </LinearLayout>
	<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:paddingLeft="15dp"
    android:text="投诉教练姓名"/>
        <TextView
        android:id="@+id/complaint_coach_name_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/person_center_tv_bkground"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/left_black"
        android:textSize="16sp"
        android:text="@string/apply_left_coach" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee" >
        </LinearLayout>
        
        	<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:paddingLeft="15dp"
    android:text="您的联系电话"/>
<TextView
        android:id="@+id/complaint_coach_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/person_center_tv_bkground"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/left_black"
        android:textSize="16sp"
        android:text="手机号" />
  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee" >
        </LinearLayout>
      <TextView 
          android:id="@+id/sdk_status_edit_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:paddingLeft="15dp"
    android:text="投诉内容 0/200"/>
        <com.sft.view.BulleinEditText
            android:id="@+id/complaint_content"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:clickable="true"
            android:cursorVisible="true"
            android:gravity="left|top"
            android:maxLength="200"
            android:maxLines="7"
            android:scrollbars="vertical"
            android:textColor="#333"
            android:textSize="14sp"
            android:padding="8dp"
            android:textCursorDrawable="@null" >
        </com.sft.view.BulleinEditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#f7f9fb" >
        </LinearLayout>
    </LinearLayout>

    </ScrollView>
    
    <ImageView
        android:id="@+id/complaint_commit_pic1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/sc_layout"
        android:layout_marginTop="28dp"
        android:src="@drawable/applydefault" />

    <ImageView
        android:id="@+id/complaint_commit_pic2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/complaint_commit_pic1"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/complaint_commit_pic1"
        android:src="@drawable/applydefault" />
    
    <Button
        android:id="@+id/button_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/complaint_commit_pic1"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_bg"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:text="提交"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/complaint_coach_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_commit"
        android:layout_alignLeft="@+id/complaint_commit_pic1"
        android:text=""
        android:layout_marginBottom="15dp"
        android:textColor="@color/left_black"
        android:textSize="16sp" />

</RelativeLayout>