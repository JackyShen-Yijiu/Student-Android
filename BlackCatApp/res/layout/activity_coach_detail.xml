<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000" >

    <ScrollView
        android:id="@+id/coach_detail_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- 高度动态控制 -->

                <RelativeLayout
                    android:id="@+id/coach_detail_head_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                    <ImageView
                        android:id="@+id/coach_detail_headpic_im"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/headpic_cover" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/coachdetail_collection_widthheight"
                    android:layout_height="@dimen/coachdetail_collection_widthheight"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/coach_detail_head_layout"
                    android:layout_marginRight="@dimen/coachdetail_collection_marginright"
                    android:layout_marginTop="@dimen/coachdetail_collection_margintop"
                    android:background="@drawable/collect_bkground" >

                    <CheckBox
                        android:id="@+id/coach_detail_collection_ck"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/collect_heart_bkground"
                        android:button="@null"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coach_detail_head_layout"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                    android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/coach_detail_coachname_tv"
                            style="@style/coachdetail_title_style"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/coach_detail_shuttle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/shuttle_bkground"
                            android:contentDescription="@string/app_name"
                            android:text="@string/shuttle"
                            android:textColor="@color/app_main_color" />

                        <TextView
                            android:id="@+id/coach_detail_general"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/general_bkground"
                            android:contentDescription="@string/app_name"
                            android:text="@string/general"
                            android:textColor="@color/coach_general" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/coach_detail_ratingBar"
                        style="@style/roomRatingBar_30"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:id="@+id/coach_detail_place_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@drawable/location"
                        android:drawableRight="@drawable/location"
                        android:textColor="#333333"
                        android:textSize="14dp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                style="@style/coachdetail_devider_style"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                <TextView
                    android:id="@+id/coach_detail_coachinfo_tv"
                    style="@style/coachdetail_title_style"
                    android:text="@string/coach_info"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/coachdetail_content_style"
                        android:text="@string/coach_worktime" />

                    <TextView
                        android:id="@+id/coach_detail_weektime_tv"
                        style="@style/coachdetail_content_style"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/coach_detail_time_tv"
                        style="@style/coachdetail_content_style"
                        android:textColor="#999999" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/coachdetail_content_style"
                        android:text="@string/ex_place" />

                    <TextView
                        android:id="@+id/coach_detail_school_tv"
                        style="@style/coachdetail_content_style"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/coachdetail_content_style"
                        android:text="@string/coach_course" />

                    <TextView
                        android:id="@+id/coach_detail_course_tv"
                        style="@style/coachdetail_content_style"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/coachdetail_content_style"
                        android:text="@string/coach_seniority" />

                    <TextView
                        android:id="@+id/coach_detail_seniority_tv"
                        style="@style/coachdetail_content_style"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/coach_detail_student_count"
                        style="@style/coachdetail_content_style" />

                    <TextView
                        android:id="@+id/coach_detail_rate_tv"
                        style="@style/coachdetail_content_style"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/app_main_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/coachdetail_content_style"
                        android:text="@string/coach_shuttle" />

                    <TextView
                        android:id="@+id/coach_detail_shuttle_tv"
                        style="@style/coachdetail_content_style"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                style="@style/coachdetail_devider_style"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/coachdetail_layout_paddingtopbottom"
                android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                <TextView
                    android:id="@+id/coach_detail_evaluationtitle_tv"
                    style="@style/coachdetail_title_style"
                    android:text="@string/self_evaluation"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/coach_detail_evaluation_tv"
                    style="@style/coachdetail_content_style" />
            </LinearLayout>

            <ImageView
                style="@style/coachdetail_devider_style"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/coachdetail_layout_paddingtopbottom" >

                <TextView
                    android:id="@+id/coach_detail_studentevaluation_tv"
                    style="@style/coachdetail_title_style"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/student_evaluation" />

                <TextView
                    android:id="@+id/coach_detail_noevaluation_tv"
                    style="@style/coachdetail_title_style"
                    android:layout_below="@+id/coach_detail_studentevaluation_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/no_comment" />

                <me.maxwin.view.XListView
                    android:id="@+id/coach_detail_listview"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/coach_detail_studentevaluation_tv"
                    android:layout_marginLeft="15dp"
                    android:background="#ffffff"
                    android:cacheColorHint="#00000000"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@null"
                    android:dividerHeight="1dp"
                    android:fadingEdge="none"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:listSelector="@android:color/transparent"
                    android:overScrollMode="always"
                    android:scrollbars="none" />
            </RelativeLayout>

            <Button
                android:id="@+id/coach_detail_enroll_btn"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/enroll" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>