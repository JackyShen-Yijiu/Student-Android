<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="102dp" />

    <ImageView
        android:id="@+id/search_coach_im"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="95dp"
        android:background="#e6e6e6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <com.joooonho.SelectableRoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/search_coach_headpin_im1"
                android:layout_width="@dimen/selectcoach_headpic_widthheight"
                android:layout_height="@dimen/selectcoach_headpic_widthheight"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/app_name"
                app:sriv_border_color="#00000000"
                app:sriv_border_width="1dip" />
        

        <ImageView
            android:id="@+id/search_coach_headpin_im"
            android:layout_width="@dimen/selectcoach_headpic_widthheight"
            android:layout_height="@dimen/selectcoach_headpic_widthheight"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/search_coach_coachname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/search_coach_shuttle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/shuttle_bkground"
                    android:contentDescription="@string/app_name"
                    android:text="@string/shuttle"
                    android:textColor="@color/app_main_color"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/search_coach_general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/general_bkground"
                    android:contentDescription="@string/app_name"
                    android:text="@string/general"
                    android:textColor="@color/coach_general"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <RatingBar
                        android:id="@+id/search_coach_ratingBar"
                        style="@style/roomRatingBar_26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:fadingEdge="none"
                        android:isIndicator="true"
                        android:listSelector="@android:color/transparent"
                        android:numStars="5" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="7dp" >

                <TextView
                    android:id="@+id/search_coach_schoolname_tv"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_size_ss" />
                <TextView
                    android:id="@+id/search_coach_age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                    android:textColor="#999999"
                    android:textSize="@dimen/txt_size_ss" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" >

                <TextView
                    android:id="@+id/search_coach_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/txt_size_small" />

                <TextView
                    android:id="@+id/search_coach_distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#999999"
                    android:visibility="gone"
                    android:textSize="@dimen/txt_size_ss" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>