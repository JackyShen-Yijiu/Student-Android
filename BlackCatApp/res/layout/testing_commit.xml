<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ccc"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:layout_marginTop="21dp" >

        <TextView
            android:id="@+id/textView_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/unpress_one"
            android:gravity="center"
            android:text="验证手机号"
            android:textColor="#333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/unpress_two"
            android:gravity="center"
            android:text="验证信息"
            android:textColor="#333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="22dp"
            android:background="@drawable/press_three"
            android:gravity="center"
            android:text="提交验证"
            android:textColor="#fff"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_title_one"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="21dp"
        android:background="#ccc"
        android:orientation="horizontal" >
    </LinearLayout>
   <Button
       android:id="@+id/button_sus"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:background="#ff6633"
       android:textSize="16sp"
       android:textColor="#ffffff"
       android:text="完成" />

   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ll_title_one"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="40dp"
       android:textColor="#f00"
       android:textSize="12sp"
       android:text="恭喜您，验证成功。" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/textView1"
       android:layout_centerHorizontal="true"
       android:textColor="#f00"
       android:textSize="12sp"
       android:text="一步学车将为您定制属于您的学车之路。" />

   <ImageView
       android:id="@+id/imageView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/textView2"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="25dp"
       android:src="@drawable/sus_draw" />
  
</RelativeLayout>