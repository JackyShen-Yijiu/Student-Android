<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_titlebar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_titlebar_height"
    android:background="@color/new_app_main_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/base_title_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >
        
        <View 
            android:id="@+id/base_titlebar_layout_bg"
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/base_left_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/app_main_title_color"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/base_left_btn"
            android:layout_width="@dimen/base_titlebar_leftright_btn_width"
            android:layout_height="@dimen/base_titlebar_leftright_btn_height"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/base_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#fefefe"
            android:textSize="18dp"
            android:textStyle="bold" />
        
        <ImageButton
            android:id="@+id/base_right_btn2"
            android:layout_width="@dimen/base_titlebar_leftright_btn_width"
            android:layout_height="@dimen/base_titlebar_leftright_btn_height"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/base_right_btn"
            android:visibility="gone"
            android:background="@null"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/base_right_btn"
            android:layout_width="@dimen/base_titlebar_leftright_btn_width"
            android:layout_height="@dimen/base_titlebar_leftright_btn_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/base_right_tv" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="right|center_vertical"
            android:minWidth="50dp"
            android:textColor="@color/app_main_title_color"
            android:textSize="14dp" />
    </RelativeLayout>

    <!--
             <ImageView
            android:id="@+id/base_deviderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:contentDescription="@string/app_name" />
    -->

</LinearLayout>