<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
            android:id="@+id/course_fee_title_tv"
            style="@style/coachdetail_title_style"
            android:text="title"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/course_fee_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:text="ï¿¥0" />
            
        </RelativeLayout>

        <TextView
            android:id="@+id/course_fee_intro_tv"
            style="@style/text_gray_small"
            android:text="intro"
            android:layout_marginTop="5dp" />

        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp" >
            
            <TextView
                android:id="@+id/course_fee_name_title_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/course_fee_enroll_btn"
                android:gravity="center_vertical"
                android:text="title"
                android:textColor="@color/txt_333"
                android:textSize="14sp" />
            
            <Button
            android:id="@+id/course_fee_enroll_btn"
            style="@style/btn_style_red"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:text="@string/enroll" />
            
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        style="@style/coachdetail_devider_style1"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name" />

</LinearLayout>