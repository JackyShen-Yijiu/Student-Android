<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg_light"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <RelativeLayout
            android:id="@+id/my_appointment_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_car" />

            <TextView
                android:id="@+id/my_appointment_subject_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="科目二"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/iv_car"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toLeftOf="@+id/learn_progress_yuekao"
            android:layout_toRightOf="@+id/my_appointment_ll"
            android:layout_alignTop="@+id/my_appointment_ll"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/my_appointment_subject_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="商铺起步"
                android:textColor="@color/txt_333"
                android:textSize="@dimen/txt_size_large" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content" 
                >

                <TextView
                    android:id="@+id/my_appoint_studied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/new_app_main_color"
                    android:text="规定"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/my_appoint_notsign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/my_appoint_studied"
                    android:text="购买"
                    android:textColor="@color/new_button_color"
                    android:textSize="12sp" />

                
            </RelativeLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/learn_progress_yuekao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="20dp"
			android:layout_marginTop="11dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:background="@drawable/selector_btn_yuekao"
            >
            <TextView 
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/white"
            	android:textSize="@dimen/txt_size_large"
            	android:text="约考"
                />
            
            <TextView 
                android:id="@+id/learn_progress_last_class"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/white"
            	android:textSize="@dimen/txt_size_small"
            	android:visibility="visible"
            	android:text="还需0学时"
                />
            
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    

</LinearLayout>