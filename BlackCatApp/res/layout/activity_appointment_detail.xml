<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_dark" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg_dark"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/appointment_detail_appoint_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24.5dp"
                android:text="预约已接受"
                android:textColor="@color/new_app_main_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/appointment_detail_qrcode_iv"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16.5dp"
                android:src="@drawable/ybxch_official_website_qrcode" />

            <TextView
                android:id="@+id/appointment_detail_appoint_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="（给教练扫一扫二维码即可签到）"
                android:textColor="@color/new_text_color_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/appointment_detail_sign_know_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="14.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="签到须知：签到开放时间为预约学车开始前15分钟到预约结束时间，请及时签到。如未签到，将影响您的学车进度及教练的工时记录。"
                android:textColor="@color/new_text_color_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/appointment_detail_class_name_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_kemu" />

                <TextView
                    android:id="@+id/appointment_detail_class_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21.5sp"
                    android:layout_toRightOf="@+id/appointment_detail_class_name_iv"
                    android:text="信息暂无"
                    android:textColor="@color/new_text_color_dark"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/appointment_detail_time_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_time" />

                <TextView
                    android:id="@+id/appointment_detail_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21.5sp"
                    android:layout_toRightOf="@+id/appointment_detail_time_iv"
                    android:text="信息暂无"
                    android:textColor="@color/new_text_color_dark"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:id="@+id/appointment_detail_signin_line"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/line_color"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/appointment_detail_signin_rl"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/appointment_detail_signin_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_qiandao" />

                <TextView
                    android:id="@+id/appointment_detail_signin_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21.5sp"
                    android:layout_toRightOf="@+id/appointment_detail_signin_iv"
                    android:text="信息暂无"
                    android:textColor="@color/new_text_color_dark"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:id="@+id/appointment_detail_stopcar_line"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/line_color"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/appointment_detail_stopcar_rl"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/appointment_detail_stopcar_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_kecheng" />

                <TextView
                    android:id="@+id/appointment_detail_stopcar_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21.5sp"
                    android:layout_toRightOf="@+id/appointment_detail_stopcar_iv"
                    android:text="信息暂无"
                    android:textColor="@color/new_text_color_dark"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/appointment_detail_coach_name_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_renxiang" />

                <TextView
                    android:id="@+id/appointment_detail_coach_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21.5sp"
                    android:layout_toRightOf="@+id/appointment_detail_coach_name_iv"
                    android:text="信息暂无"
                    android:textColor="@color/new_text_color_dark"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/appointment_detail_coach_duihua_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:padding="15dp"
                    android:src="@drawable/icon_duihua" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/appointment_detail_draining_ground_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_map" />

                <TextView
                    android:id="@+id/appointment_detail_draining_ground_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21.5sp"
                    android:layout_toRightOf="@+id/appointment_detail_draining_ground_iv"
                    android:text="信息暂无"
                    android:textColor="@color/new_text_color_dark"
                    android:textSize="14dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appointment_detail_but_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg_dark"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/appointment_detail_btn_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="37.5dp"
                android:text="预约开始前24小时内将不能取消预约"
                android:textColor="@color/new_text_color_light"
                android:textSize="12sp" />

            <Button
                android:id="@+id/appointment_detail_cancel_but"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_rounded_corners"
                android:text="@string/cancel_appointment"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>