<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blackcat.coach.fragments.ProfileFragment" >

    <com.sft.view.WeekColumnView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp" />

    <com.sft.view.WeekViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="67dp" >
    </com.sft.view.WeekViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/my_appointment_subject_value_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/red_point"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/my_appointment_subject_value_tv"
            android:visibility="visible" >

            <TextView
                android:id="@+id/my_appointment_subject_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:singleLine="true"
           
                android:textColor="@color/txt_333"
                android:textSize="16dp" />
            
             <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                android:id="@+id/my_appoint_studied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="@color/txt_999"
                 />

            <TextView
                android:id="@+id/my_appoint_really"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:textColor="@color/txt_999"
                 />

            <TextView
                android:id="@+id/my_appoint_notsign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_appoint_studied"
                android:layout_marginRight="15dp"
                android:textColor="@color/txt_999"
                 />

            <TextView
                android:id="@+id/my_appoint_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/my_appoint_studied"
                android:layout_marginRight="35dp"
                android:textColor="@color/txt_999"
                 />
        </RelativeLayout>
        </LinearLayout>
       
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="19dp"
        android:background="@color/line_color"/>

</LinearLayout>