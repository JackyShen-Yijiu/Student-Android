<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enroll_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_dark" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/new_apply_next_rl"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg"
                android:orientation="horizontal" >
            </LinearLayout>

            <include
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/ll_title"
                layout="@layout/line" />
            <!-- 1 -->

            <LinearLayout
                android:id="@+id/top_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="17dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="班级类型"
                    android:textColor="@color/txt_999"
                    android:textSize="@dimen/txt_size_ss" />

                <TextView
                    android:id="@+id/new_apply_classtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:text="班级类型11"
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/txt_size_middle" />

                <include layout="@layout/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="报考驾校"
                    android:textColor="@color/txt_999"
                    android:textSize="@dimen/txt_size_ss" />

                <TextView
                    android:id="@+id/new_apply_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:text="一步互联"
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/txt_size_middle" />

                <include layout="@layout/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="报考教练"
                    android:textColor="@color/txt_999"
                    android:textSize="@dimen/txt_size_ss" />

                <TextView
                    android:id="@+id/new_apply_coach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:text="智能匹配"
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/txt_size_middle" />

                <include layout="@layout/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="真实姓名"
                        android:textColor="@color/txt_999"
                        android:textSize="@dimen/txt_size_ss" />

                    <TextView
                        android:id="@+id/new_apply_name_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="17dp"
                        android:drawablePadding="3dp"
                        android:drawableRight="@drawable/login_hint"
                        android:gravity="center_vertical"
                        android:text="真实姓名不能为空"
                        android:textColor="@color/new_app_main_color"
                        android:textSize="@dimen/txt_size_ss"
                        android:visibility="gone" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/enroll_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:text=""
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/txt_size_middle" >
                </EditText>

                <include layout="@layout/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="联系电话"
                        android:textColor="@color/txt_999"
                        android:textSize="@dimen/txt_size_ss" />

                    <TextView
                        android:id="@+id/new_apply_phone_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="17dp"
                        android:drawablePadding="3dp"
                        android:drawableRight="@drawable/login_hint"
                        android:gravity="center_vertical"
                        android:text="真实姓名"
                        android:textColor="@color/new_app_main_color"
                        android:textSize="@dimen/txt_size_ss"
                        android:visibility="gone" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/enroll_contact_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:text=""
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/txt_size_middle" />

                <include layout="@layout/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="一步Y码(折扣券)"
                        android:textColor="@color/txt_999"
                        android:textSize="@dimen/txt_size_ss" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/enroll_ycode_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:hint="请输入Y码"
                    android:text=""
                    android:textColor="@color/txt_333"
                    android:textSize="@dimen/txt_size_middle" />

                <include layout="@layout/line" />

                <RadioGroup
                    android:id="@+id/pay_type_gp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="24dp" >

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:button="@drawable/radio_button_bg"
                        android:checked="true"
                        android:paddingLeft="3dp"
                        android:text="线上支付"
                        android:textColor="@color/txt_333" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:button="@drawable/radio_button_bg"
                        android:paddingLeft="3dp"
                        android:text="线下支付"
                        android:textColor="@color/txt_333" />
                </RadioGroup>
            </LinearLayout>

            <!-- 4 -->

            <LinearLayout
                android:id="@+id/ll_divide_one"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/line3"
                android:background="#ccc"
                android:orientation="horizontal"
                android:visibility="gone" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/apply_class_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f7f9fb"
                    android:orientation="vertical"
                    android:paddingLeft="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="一步特惠班详情"
                        android:textColor="#000000" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e6e6e6"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/class_detail_class_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="@string/class_info"
                        android:textColor="#ff6633"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/class_detail_style_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/license"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/class_detail_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/active_date"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/class_detail_week_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/course_date"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/class_detail_feature_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feature"
                            android:textColor="#333333"
                            android:textSize="14dp" />

                        <com.sft.viewutil.MultipleTextViewGroup
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/class_detail_multiple_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:overspread="false"
                            app:textLineMargin="10dp"
                            app:textPaddingBottom="2dp"
                            app:textPaddingLeft="2dp"
                            app:textPaddingRight="2dp"
                            app:textPaddingTop="2dp"
                            app:textSize="12sp"
                            app:textWordMargin="10dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/class_detail_brand_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/car_brand"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/price"
                            android:textColor="#333333"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/class_detail_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/app_main_color"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/class_detail_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/enroll_count"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="19dp"
                        android:background="#e6e6e6"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/class_detail_introduction_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/class_introduction"
                        android:textColor="#ff6633"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/class_detail_introduction_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:textColor="#333333"
                        android:textSize="14dp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView_devide"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/apply_class_detail"
                android:background="#e6e6e6"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_title_one"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/line31"
                android:background="@color/main_bg"
                android:orientation="horizontal" >
            </LinearLayout>

            <include
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/ll_title_one"
                layout="@layout/line" />

            <include
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/line4"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                layout="@layout/line" />

            <View
                android:id="@+id/line9"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/top_infor"
                android:background="#c4c4c4" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/line9"
                android:background="@color/app_bg_dark"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温馨提示:"
                    android:textColor="#f00"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:text="     请认真填写以上信息，您填写的信息将作为报名信息录入车考驾照系统内，如果信息错误，将影响你的报名流程。"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/new_apply_next_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >
        <include layout="@layout/line"/>

        <TextView
            android:id="@+id/new_apply_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/enroll_commit_btn"
            android:layout_alignBottom="@+id/enroll_commit_btn"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"
            android:text="需支付  3228元"
            android:textColor="@color/txt_333"
            android:textSize="@dimen/txt_size_large" />

        <Button
            android:id="@+id/enroll_commit_btn"
           
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            style="@style/btn_style_red"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_large" />
    </RelativeLayout>

</RelativeLayout>