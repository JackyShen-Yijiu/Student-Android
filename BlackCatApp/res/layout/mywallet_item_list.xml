<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#e8e8ed"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ticket_bg"
        android:layout_height="130dp">
    <ImageView 
        android:id="@+id/iv_code"
        android:layout_width="46dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="22dp"
        android:layout_height="46dp"/>
    <TextView 
		android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_code"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:text="兑换劵"/>
 <TextView 
        android:id="@+id/mywallet_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@+id/tv_1"
        android:textSize="12sp"
        android:text="时间"/>
 
 <TextView 
     android:id="@+id/tv_2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/mywallet_item_date_tv"
     android:layout_alignLeft="@+id/iv_code"
     android:textSize="12sp"
     android:layout_marginTop="32dp"
     android:textColor="@color/new_button_color"
     android:text="兑换劵详情"
     />
 <ImageView 
     android:id="@+id/iv_zhankai"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/selector_zhankai"
     android:layout_marginRight="22dp"
     android:layout_alignBottom="@+id/tv_2"
     android:layout_alignParentRight="true"/>
  </RelativeLayout>
  
 <LinearLayout 
     android:id="@+id/ll_detail"
     android:layout_width="match_parent"
     android:layout_marginLeft="16dp"
     android:layout_marginTop="0.5dp"
     android:layout_marginRight="16dp"
     android:layout_below="@+id/rl_title"
     android:background="@color/white"
     android:orientation="vertical"
     android:visibility="gone"
     android:padding="16dp"
     android:layout_height="wrap_content">
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="12sp"
         android:textColor="@color/new_app_main_color"
         android:text="该兑换劵仅能在下列活动中选择一个活动使用"/>
     <com.sft.view.NoScrollListView 
         android:id="@+id/list_detail"
         android:layout_width="match_parent"
         android:layout_marginTop="14dp"
         android:divider="#00000000"  
        android:dividerHeight="0dip"
         android:layout_height="wrap_content">
         
     </com.sft.view.NoScrollListView>
 </LinearLayout>

</LinearLayout>
