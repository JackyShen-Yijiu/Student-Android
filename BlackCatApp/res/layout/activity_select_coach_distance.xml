<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff" >
    <me.maxwin.view.XListView
        android:id="@+id/select_coach_distance_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:divider="@null"
        android:dividerHeight="2dp"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="always"
        android:scrollbars="none" /> 

    
   <RelativeLayout
        android:id="@+id/select_coach_distance_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
         >

        <ImageView
            android:id="@+id/select_coach_distance_devider_im"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name" />

    <ImageView 
        android:id="@+id/select_coach_distance_no_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_coach_distance_devider_im"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_error_robot"
        />
        <TextView
            android:id="@+id/select_coach_distance_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_coach_distance_no_im"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="@string/nocoach"
            android:textColor="@color/left_gray"
            android:textSize="14sp" />
    </RelativeLayout> 

</RelativeLayout>