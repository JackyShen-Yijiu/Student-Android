<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/appointment_submit" />

    <TextView
        android:id="@+id/appointment_exam_success_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:text="@string/congratulations_appointment_exam_finish"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/txt_size_middle" />
    
       <TextView
           android:id="@+id/appointment_exam_success_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/appointmenting"
        android:textColor="@color/new_app_main_color"
        android:textSize="@dimen/txt_size_large" />

       <TextView
           android:id="@+id/appointment_exam_success_time_tv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:gravity="center_horizontal"
           android:text="@string/appointment_exam_tip"
           android:textColor="@color/text_color_light"
           android:textSize="@dimen/txt_size_middle" />
       
       
       <TextView
           android:id="@+id/appointment_exam_success_address_tv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="14dp"
           android:gravity="center_horizontal"
           android:text="如有疑问请拨打客服：400-123-123"
           android:textColor="@color/text_color_light"
           android:textSize="@dimen/txt_size_middle" />

</LinearLayout>