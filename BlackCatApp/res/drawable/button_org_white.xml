<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape
             >

            <!-- 填充的颜色
            
             <solid android:color="@color/app_main_color" />
             -->
           
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径
            
            <corners android:radius="3dip" />
            
             -->
            
            <stroke
                android:width="1dp"
                android:color="@color/new_app_main_color" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="3dp"
                android:right="3dp"
                android:top="5dp"
                android:bottom="5dp"
                 />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        >
        <shape>
            <solid android:color="@color/white" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

</layer-list>